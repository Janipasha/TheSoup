<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:ignore="MissingPrefix"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    <ImageView
        android:id="@+id/globe"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="50dp"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_login" />

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        >


        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            android:visibility="gone"/>

        <com.google.android.gms.common.SignInButton
            android:id="@+id/sign_in_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:includeFontPadding="false"
            android:id="@+id/onboardinghero"
            fontPath="fonts/montserrat-bold.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:letterSpacing="-0.03"
            android:text="LET'S"
            android:layout_marginBottom="-6dp"
            android:textColor="#222222"
            android:textSize="29sp"
            android:minHeight="0dp"
            android:layout_gravity="center"/>



        <TextView
            android:includeFontPadding="false"
            android:minHeight="0dp"
            android:id="@+id/onboardinghero2"
            fontPath="fonts/montserrat-black.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:letterSpacing="-0.03"
            android:lineSpacingExtra="-1sp"
            android:textColor="#222222"
            android:textSize="36sp"
            android:text="BEGIN"
            android:layout_marginTop="-3dp"
            android:layout_marginBottom="18dp"/>


        <TextView
            fontPath="fonts/montserrat-light.ttf"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:letterSpacing="-0.01"
            android:lineSpacingExtra="6sp"
            android:textColor="#000000"
            android:textSize="15sp"
            android:text="Login to start following Stories" />

        <Button
            android:id="@+id/facebook"
            android:layout_marginTop="20dp"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="@drawable/button_fb"
            fontPath="fonts/montserrat-bold.ttf"
            android:text="Login with Facebook"
            android:textColor="#ffffff"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickSocial"
             />

        <Button
            android:id ="@+id/google_button"
            android:layout_width="268dp"
            android:layout_height="48dp"
            android:layout_marginTop="17dp"
            android:gravity="center"
            android:background="@drawable/button_google"
            android:text="Login with Google"
            android:textColor="#ffffff"
            fontPath="fonts/montserrat-bold.ttf"
            android:textAllCaps="false"
            android:textSize="15sp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:onClick="onClickSocial"
            />



    </LinearLayout>




    </RelativeLayout>

</LinearLayout>