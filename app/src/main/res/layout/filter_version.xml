<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    tools:ignore="MissingPrefix">




    <LinearLayout
        android:id="@+id/filters"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <!--android:layout_alignParentTop="true"-->

        <TextView
            android:id="@+id/heading"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textColor="#222222"
            android:lineSpacingExtra="0sp"
            tools:text="Governance"
            android:layout_marginLeft="20dp"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="24dp"
            fontPath= "fonts/montserrat-bold.otf"
            />


        <RelativeLayout
            android:background="?android:attr/selectableItemBackground"
            android:layout_marginBottom="14dp"
            android:id="@+id/filterlayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            
            <ImageView
                android:id="@+id/filter_image"
                android:layout_alignParentLeft="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="17dp"
                android:src="@drawable/icons8_journey_filled"/>



            <ImageView

                android:id="@+id/checkbox_filter"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:src="@drawable/icons8_checked_checkbox"
                android:layout_marginRight="20dp"/>


            <TextView
                android:layout_centerVertical="true"
                android:layout_toRightOf="@id/filter_image"
                android:id="@+id/item1"
                android:layout_toLeftOf="@id/checkbox_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="14sp"
                android:letterSpacing="-0.04"
                android:layout_marginRight="20dp"
                android:lineSpacingExtra="0sp"
                tools:text="Politics &amp; Governments"
                fontPath= "fonts/montserrat-semibold.ttf"/>
            


        </RelativeLayout>


    </LinearLayout>


</LinearLayout>