<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#f2f2f2"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:id="@+id/filterheadernormal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
        android:id="@+id/filter_heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#222222"
        android:lineSpacingExtra="0sp"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="20dp"
        fontPath= "fonts/montserrat-bold.otf"
        tools:text="Hello"
         />

    <TextView
        android:id="@+id/filtertoptext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        fontPath= "fonts/montserrat-light.ttf"
        android:textColor="#222222"
        android:lineSpacingExtra="2sp"
        android:layout_marginRight="17dp"
        android:text="@string/categories_count"
        />

    </LinearLayout>

    <TextView
        android:id="@+id/discoverfilter"
        android:visibility="gone"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#222222"
        android:lineSpacingExtra="0sp"
        android:text="Discover Stories In"
        />
</LinearLayout>