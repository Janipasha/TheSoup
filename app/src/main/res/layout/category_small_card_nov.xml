<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f2f2f2"
    tools:ignore="MissingPrefix">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:id="@+id/top_card"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/circle1"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/ic_radio_button_unchecked_black_24dp" />

                <View
                    android:id="@+id/sideline"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bottom_line"
                    android:layout_below="@id/circle1"
                    android:layout_marginLeft="7dp"
                    android:background="@color/black" />


                <TextView
                    android:layout_toRightOf="@id/circle1"
                    android:id = "@+id/num_articles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/com_facebook_blue"
                    android:lineSpacingExtra="0sp"
                    tools:text="7 Articles -"
                    android:layout_marginRight="2dp"
                    />

                <TextView
                    android:layout_toRightOf="@id/num_articles"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#757575"
                    android:lineSpacingExtra="0sp"
                    tools:text="12 hours ago "
                    />

                <TextView
                    android:id="@+id/sharetext"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/com_facebook_blue"
                    android:lineSpacingExtra="1sp"
                    tools:text="SHARE"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:layout_marginRight="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_toLeftOf="@id/sharetext"
                    android:src= "@drawable/icons8_share"/>

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:id="@+id/text_article_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/num_articles"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_marginLeft="32dp"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#222222"
                            android:id="@+id/article_text"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="3sp"
                            tools:text="Presidential election | Modi-Shah ace: Who can object to a Dalit rights crusader Ram Nath Kovind"/>

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#757575"
                            android:lineSpacingExtra="0sp"
                            tools:text="The Times Of India"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_notification_dark"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="32dp"
                    android:id="@+id/bottom_line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_article_layout"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <View
                    android:id="@+id/sideline2"
                    android:layout_width="2dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="7dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/black" />

                <ImageView
                    android:id="@+id/circle"
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_below="@id/sideline2"
                    android:layout_marginRight="17dp"
                    android:src="@drawable/ic_radio_button_unchecked_black_24dp" />

                <View
                    android:id="@+id/sideline1"
                    android:layout_width="2dp"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@id/bottom_line_1"
                    android:layout_below="@id/circle"
                    android:layout_marginLeft="7dp"
                    android:background="@color/black" />


                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/circle"
                    android:id = "@+id/num_articles_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/com_facebook_blue"
                    android:lineSpacingExtra="0sp"
                    tools:text="7 Articles -"
                    android:layout_marginRight="2dp"
                    />

                <TextView
                    android:layout_marginTop="15dp"
                    android:layout_toRightOf="@id/num_articles_1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="#757575"
                    android:lineSpacingExtra="0sp"
                    tools:text="12 hours ago "
                    />

                <TextView
                    android:layout_marginTop="15dp"
                    android:id="@+id/sharetext_1"
                    android:layout_alignParentEnd="true"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="9sp"
                    android:textColor="@color/com_facebook_blue"
                    android:lineSpacingExtra="1sp"
                    tools:text="SHARE"
                    android:layout_alignParentRight="true" />

                <ImageView
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="5dp"
                    android:layout_width="10dp"
                    android:layout_height="10dp"
                    android:layout_toLeftOf="@id/sharetext_1"
                    android:src= "@drawable/icons8_share"/>

                <LinearLayout
                    android:layout_marginBottom="8dp"
                    android:id="@+id/text_article_layout_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/num_articles_1"
                    android:layout_marginTop="15dp">

                    <LinearLayout
                        android:layout_marginLeft="32dp"
                        android:layout_weight="6"
                        android:layout_width="0dp"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="13sp"
                            android:textColor="#222222"
                            android:id="@+id/article_text_1"
                            android:letterSpacing="-0.02"
                            android:lineSpacingExtra="3sp"
                            tools:text="Presidential election | Modi-Shah ace: Who can object to a Dalit rights crusader Ram Nath Kovind"/>

                        <TextView
                            android:layout_marginTop="8dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="10sp"
                            android:textColor="#757575"
                            android:lineSpacingExtra="0sp"
                            tools:text="The Times Of India"
                            />

                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="0dp"
                        android:layout_weight="2"
                        android:layout_marginRight="10dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            android:layout_width="70dp"
                            android:layout_height="70dp"
                            android:src="@drawable/ic_notification_dark"
                            android:layout_alignParentRight="true" />

                    </RelativeLayout>

                </LinearLayout>

                <View
                    android:layout_marginLeft="32dp"
                    android:id="@+id/bottom_line_1"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_below="@id/text_article_layout_1"
                    android:layout_marginBottom="0dp"
                    android:layout_marginRight="10dp"
                    android:background="@color/black" />

            </RelativeLayout>




            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="0dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="10dp"
                >

                <View
                    android:id="@+id/sideline3"
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:layout_marginLeft="9dp"
                    android:layout_alignParentTop="true"
                    android:background="@color/black" />

                <ImageView
                    android:id="@+id/filter_image"
                    fontPath="fonts/montserrat-light.ttf"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginLeft="-2dp"
                    android:src="@drawable/icons8_logout"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <LinearLayout
                    android:layout_marginTop="10dp"
                    android:id="@+id/follow_icon_layout"
                    android:layout_width="80dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:orientation="vertical">

                    <ImageView
                        android:id="@+id/followicon"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:layout_marginTop="-2dp"
                        android:src="@drawable/icons8_plus_filled" />
                </LinearLayout>

                <RelativeLayout
                    android:layout_centerVertical="true"
                    android:id="@+id/topstory_layout"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:layout_toLeftOf="@id/follow_icon_layout"
                    android:layout_toRightOf="@id/filter_image">

                    <TextView
                        android:id="@+id/story_name"
                        android:layout_centerVertical="true"
                        fontPath="fonts/montserrat-regular.otf"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="1dp"
                        android:layout_marginRight="12dp"
                        android:lineSpacingExtra="1sp"
                        android:text="India - China Relations"
                        android:textColor="#757575"
                        android:textSize="10sp" />


                </RelativeLayout>



            </RelativeLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>