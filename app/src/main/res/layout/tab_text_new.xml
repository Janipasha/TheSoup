<?xml version="1.0" encoding="utf-8"?>
<!-- needs this container to work with the Tablayout -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="#222222"
    tools:ignore="MissingPrefix">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginBottom="2dp">

       <ImageView
           android:id="@+id/globe1"
           android:layout_marginTop="6dp"
           android:layout_width="20dp"
           android:layout_height="20dp"
           android:layout_gravity="center"
           android:src="@drawable/globe"
           android:layout_marginBottom="2dp"
           android:visibility="gone"/>

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginTop="6dp"
                android:id="@+id/notificationbell"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:visibility="gone"
                android:layout_marginBottom="2dp"
                android:src="@drawable/icon_notification"/>
            <ImageView
                android:id="@+id/notificationcircle"
                android:layout_width="9dp"
                android:layout_height="9dp"
                android:visibility="gone"
                android:src="@drawable/notification_circle"
                android:layout_alignRight="@id/notificationbell"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="-2dp"/>

            <TextView
                android:id="@+id/badge"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:minWidth="20dp"
                android:text="1"
                android:textSize="9sp"
                app:fontPath="montserrat-bold.ttf"
                android:layout_toRightOf="@id/notificationbell"
                android:textColor="#ffffff"
                android:visibility="gone"
                android:background="@drawable/notification_badge"
                android:gravity="center"
                />

        </RelativeLayout>

    <TextView
        android:id="@+id/tabtext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center"
        app:fontPath="montserrat-regular.otf"
        tools:ignore="MissingPrefix"
        tools:text="User Profile"
        android:textAllCaps="true"
        android:layout_marginBottom="2dp"
        android:layout_gravity="center"
        android:textColor="@drawable/tab_text_color"
        android:textSize="8.5sp" />


        
    </LinearLayout>
    </LinearLayout>
